def palindrome(s, k):
    	#k must be even numbers
	palindrome_pairs = [('A','T'),('T','A'),('G','C'),('C','G')]
	for i in range(len(s)-k+1):
		test = s[i:i+k]
		if all((test[j],test[k-j-1]) in palindrome_pairs for j in range(k)):
			#print(test, i+1, k)
			print(i+1, k)

string = ''
for i in range(4,14,2):
	palindrome(string, i)
